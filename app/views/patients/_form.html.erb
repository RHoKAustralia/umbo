<%= form_with(model: patient, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :first_name, class: "sr-only" %>
    <%= form.text_field :first_name, autofocus: true, placeholder: "First Name", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :last_name, class: "sr-only" %>
    <%= form.text_field :last_name, placeholder: "Last Name", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :gender, class: "sr-only" %>
    <%= form.select(:gender, [["male", 'male'],["female", 'female']],{}, {class: "form-control"}) %>
  </div>

  <div class="form-group">
    <%= form.label :dob, class: "sr-only" %>
    <%= form.date_field :dob, placeholder: "Date of birth", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :ndis_status, "NDIS Approval" %>
    <%= form.check_box :ndis_status, class: "" %>
  </div>

  <div class="form-group">
    <%= form.label :ndis_number, class: "sr-only" %>
    <%= form.number_field :ndis_number, placeholder: "NDIS Number", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :postcode, class: "sr-only" %>
    <%= form.number_field :postcode, placeholder: "postcode", class: "form-control" %>
  </div>

  <%= render './shared/specialty_checkboxes', form: form, user: patient, show_ages: false %>

  <div class="form-group">
    <%= form.submit "Save", class: "btn btn-success form-control" %>
  </div>
<% end %>