<p id="notice"><%= notice %></p>

<h1>Sessions</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Patient</th>
      <th>Therapist</th>
      <th>Date</th>
      <th>Start time</th>
      <th>End time</th>
      <th>Payment date</th>
      <th>Total cost</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sessions.each do |session| %>
      <tr>
        <td><%= session.patient.first_name %></td>
        <td><%= session.therapist.user.first_name %></td>
        <td><%= session.date.strftime("%d/%m/%Y") %></td>
        <td><%= session.start_time.strftime("%l:%M%p") %></td>
        <td><%= session.end_time.strftime("%l:%M%p") %></td>
        <td><%= session.payment_date.strftime("%d/%m/%Y") %></td>
        <td><%= session.total_cost %></td>
        <td><%= link_to 'Show', therapist_session_path(id: session.id, therapist_id: session.therapist.id) %></td>
        <td><%= link_to 'Edit', edit_therapist_session_path(id: session.id, therapist_id: session.therapist.id) %></td>
        <td><%= link_to 'Destroy', therapist_session_path(id: session.id, therapist_id: session.therapist.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

